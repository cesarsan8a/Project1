<h1>Create a new Playlist!</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for @playlist do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
      <%= f.hidden_field :user_id, :value => session[:user_id] %>
      <!-- This will assign the playlist to the current user -->
      <%= f.submit %>
    <% end %>
  </div>
</div>
