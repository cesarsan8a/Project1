<h1><%= @playlist.title %></h1>

<div class="row">
  <div class="col-md-4 offset-md-3">
    <%= form_for @playlist do |f| %>
      <div class="form-group">
        <%= f.label :title, :value => "#{ @playlist.title }" %>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <%= f.submit %>
    <% end %>

  </div>
</div>
