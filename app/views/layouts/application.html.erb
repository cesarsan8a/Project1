<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
      <% if @spotify_user.present? %>
        <%= link_to "Log out #{ @spotify_user.display_name }", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to 'Sign in with Spotify', login_path %>
      <% end %>
      <%= link_to "Search songs", new_song_path %>
      <%= link_to "All songs", songs_path %>
</nav>
    <%= yield %>
  </body>
</html>
