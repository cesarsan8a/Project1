<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="container">
      <nav>
        <%= link_to 'Home', root_path %>
        <% if @spotify_user.present? %>
          <%= link_to "Log out #{ @spotify_user.display_name }", "/auth/spotify", :method => 'delete' %>
        <% else %>
          <%= link_to 'Sign in with Spotify', "/auth/spotify" %>
        <% end %>
        <% if @current_user.present? %>
          <%= link_to "Log out #{ @current_user.email }", login_path, :method => 'delete' %>
        <% else %>
          <%= link_to 'Sign up', new_user_path %>
          <%= link_to 'Sign in', login_path %>
        <% end %>
        <%= link_to "Search songs", new_song_path %>
        <%= link_to "All songs", songs_path %>
        <%= link_to "All Playlists", playlists_path %>
        <%= link_to "Create new playlist", new_playlist_path %>
      </nav>
      <%= yield %>
    </div>

  </body>
</html>
