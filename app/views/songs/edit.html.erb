<h1><%= @song.title %></h1>

<br>

<div class="row">
  <div class="col-md-4 offset-md-3">
    <%= image_tag @song.image, :class => 'feature' %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= form_for @song do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :value => "#{ @song.title }", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :artist %>
      <%= f.text_field :artist, :value => "#{@song.artist}", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :album %>
      <%= f.text_field :album, :value => "#{@song.album}", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.url_field :image, :value => "#{@song.image}", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :playlist_id %>
      <%= collection_check_boxes :song, :playlist_ids, Playlist.where(user_id: session[:user_id]), :id, :title, :class => "form-control" do |b| %>
        <%= b.check_box %>
        <%= b.label %>
      <% end %>
      <!-- The collection boxes allow the user to add that song to diferent playlists %> -->
    </div>

      <%= f.submit "Save" %>

    <% end %>
  </div>
</div>
