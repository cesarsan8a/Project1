<h1><%= @search_result.name %> - <%= @search_result.artists.first.name %></h1>

<%= image_tag @search_result.album.images.first['url'], :class => 'feature' %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :value => "#{@search_result.name}" %>

  <%= f.label :artist %>
  <%= f.text_field :artist, :value => "#{@search_result.artists.first.name}" %>

  <%= f.label :album %>
  <%= f.text_field :album, :value => "#{@search_result.album.name}" %>

  <%= f.label :spotify_song_id, "Song ID"%>
  <%= f.text_field :spotify_song_id, :value => "#{@search_result.id}" %>

  <%= f.label :image %>
  <%= f.url_field :image, :value => "#{@search_result.album.images.first['url']}" %>

  <%= label_tag :playlist_id %>
  <%= select_tag :playlist_id, options_for_select(Playlist.where(user_id: session[:user_id]).pluck(:title, :id)) %>
  <!-- <%= select_tag :playlist_id, options_for_select(Playlist.pluck(:title, :id)) %> -->

  <%= f.submit "Add Song" %>

<% end %>
